{
    "manifest_version": 3,
    "name": "JetZero",
    "version": "1.0",
    "description": "Offset your flight's carbon emissions and get a tax-deductible receipt.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://www.google.com/flights/*",
        "*://www.expedia.com/*",
        "*://www.kayak.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.google.com/flights/*",
                "*://www.expedia.com/*",
                "*://www.kayak.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
          "resources": ["data/airports.json"],
          "matches": ["<all_urls>"]
        }
      ]
      
}